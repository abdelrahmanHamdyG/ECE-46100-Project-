#!/bin/bash

echo "the script begins to run"
mode=$1

case "$mode" in
    install)
        npm install
        npx tsc

        if [ $? -ne 0 ]; then
            echo "A problem in compiling typescript"
        else
            echo "Compiling typescript is done Successfully";
        fi
        ;;
    test)
        npx tsc
        node ./dist/Index.js test
        ;;
    *)
        npx tsc
        if [ -f "$mode" ]; then
            node ./dist/Index.js "$mode"
        else 
            echo "file doesn't exist"
        fi
esac





